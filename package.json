{
  "name": "readme-gen-cli",
  "version": "1.0.0",
  "description": "Generate custom README.md files easily from CLI",
  "main": "bin/main.js",
  "bin": {
    "readme-gen": "./bin/main.js"
  },
  "author": "Pooreffects",
  "type": "module",
  "license": "MIT",
  "files": [
    "bin/"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chalk-animation": "^1.6.3",
    "vitest": "^3.0.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cfonts": "^3.3.0",
    "inquirer": "^12.4.2",
    "kleur": "^4.1.5"
  },
  "scripts": {
    "dev": "bun run main.ts",
    "build": "bun build main.ts --outdir bin --target bun --minify --external inquirer --external kleur --external cfonts",
    "start": "bun run bin/main.js",
    "preview": "bun run main.ts --preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage"
  },
  "publishConfig": {
    "access": "public"
  },
  "prepublishOnly": "bun run build"
}
