{
  "name": "readme-gen-cli",
  "version": "1.0.0",
  "description": "Generate custom README.md files easily from CLI",
  "main": "bin/index.js",
  "bin": {
    "readme-gen": "./bin/index.js"
  },
  "author": "Pooreffects",
  "type": "module",
  "license": "MIT",
  "private": false,
  "files": [
    "bin/",
    "src/"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chalk-animation": "^1.6.3",
    "@vitest/coverage-v8": "^3.0.7",
    "vitest": "^3.0.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cfonts": "^3.3.0",
    "inquirer": "^12.4.2",
    "kleur": "^4.1.5"
  },
  "scripts": {
    "dev": "bun run main.ts",
    "build": "bun build main.ts --outfile bin/index.js --minify --target node --external kleur --external inquirer",
    "start": "node bin/index.js",
    "preview": "bun run main.ts --preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "coverage:check": "vitest --coverage --max-workers=1 --coverage.threshold 100",
    "prepublishOnly": "bun build main.ts --outfile bin/index.js --minify --target node"
  },
  "publishConfig": {
    "access": "public"
  }
}
